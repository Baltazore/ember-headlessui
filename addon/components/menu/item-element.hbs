{{#let (element (or @tagName "a")) as |Tag|}}
  <Tag
    {{did-insert @registerItemElement}}
    {{on "mouseover" @onMouseOver}}
    {{on "click" @onClick}}
    {{will-destroy @unregisterItemElement}}
    id={{@guid}}
    role='menuitem'
    tabindex="-1"
    disabled={{@isDisabled}}
    data-disabled={{@isDisabled}}
    ...attributes
  >
    {{yield}}
  </Tag>
{{/let}}